import random

print("Welcome to the Number Guessing Game!")
print("I'm thinking of a number between 1 and 50.")
print("You have only 5 chances to guess it correctly!")

# .radient() Generate a random number between 1 and 50
secret_number = random.randint(1, 50)
attempts = 5

# Game loop
for i in range(attempts):

    guess = int(input("Attempt " + str(i + 1) + " - Enter your guess: "))

    if guess == secret_number:
        print("Congratulations! You guessed it right â€” the number was", secret_number)
        break
    elif guess < secret_number:
        print("Too low! Try a higher number.\n")
    else:
        print("Too high! Try a lower number.\n")
else:
    print("Sorry, you've used all your tries. The correct number was", secret_number)
